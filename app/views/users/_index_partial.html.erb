<div class="row text-center">
<h1>Players</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th style="text-align: center;">Email</th>
      <th style="text-align: center;">Total Games Played</th>
      <th style="text-align: center;">Won </th>
      <th style="text-align: center;">Lost </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.games.length %></td>
        <td><%= user.games.select{|game| game[:is_won] == true}.count %></td>
        <td><%= user.games.select{|game| game[:is_won] == false}.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
  <button>
  <%= link_to "Home", root_url %>  
  </button>
  <button>
  <%= link_to "Stats", "/stats" %>
  </button>
</div>
