<h1>Listing games</h1>

<table>
  <tr>
    <th>User</th>
    <th>Is won</th>
    <th>Card sequence</th>
    <th>Dealer card sequence</th>
    <th>Bet amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.user_id %></td>
    <td><%= game.is_won %></td>
    <td><%= game.card_sequence %></td>
    <td><%= game.dealer_card_sequence %></td>
    <td><%= game.bet_amount %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

